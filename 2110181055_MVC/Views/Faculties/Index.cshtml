@model IEnumerable<_2110181055_MVC.Models.faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["university_id"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="main-card mb-3 card">
            <div class="card-header">
                FACULTIES
            </div>
            <div class="table-responsive">
                <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Faculty Name</th>
                            <th class="text-center">Accreditation</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="text-center">
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left flex2">
                                                <div class="widget-heading">@Html.DisplayFor(modelItem => item.faculty_name)</div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.accreditation)</td>
                                <td class="text-center">
                                    <button type="button" id="PopoverCustomT-1" class="btn btn-light btn-sm">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.faculty_id })
                                    </button>
                                    <button type="button" id="PopoverCustomT-1" class="btn btn-light btn-sm">
                                        @Html.ActionLink("Details", "Details", new { id = item.faculty_id })
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-block text-center card-footer">
                <button class="btn-transition btn btn-outline-info">
                    @Html.ActionLink("Create New", "Create")
                </button>
            </div>
        </div>
    </div>
</div>