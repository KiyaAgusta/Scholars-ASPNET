@model _2110181055_MVC.Models.faculty

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["university_id"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Edit Lecturer</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.faculty_id)
            <form class="">
                <div class="position-relative form-group">
                    <label>Faculty Name</label>
                    @Html.EditorFor(model => model.faculty_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.faculty_name, "", new { @class = "text-danger" })
                </div>
                <div class="position-relative form-group">
                    <label>Accreditation</label>
                    @Html.EditorFor(model => model.accreditation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.accreditation, "", new { @class = "text-danger" })
                </div>
                <button class="mt-2 btn btn-primary">Save</button>
                <button class="mt-2 btn btn-light">@Html.ActionLink("Back to List", "Index")</button>
            </form>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
