@model _2110181055_MVC.Models.lecturer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["university_id"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this lecturer?</h5>
        <table class="mb-0 table table-bordered">
            <tbody>
                <tr>
                    <th scope="row"><b>Lecturer Name</b></th>
                    <td>@Html.DisplayFor(model => model.lecturer_name)</td>
                </tr>
                <tr>
                    <th scope="row"><b>Degree</b></th>
                    <td>@Html.DisplayFor(model => model.degree)</td>
                </tr>
                <tr>
                    <th scope="row"><b>Gender</b></th>
                    <td>@Html.DisplayFor(model => model.gender)</td>
                </tr>
                <tr>
                    <th scope="row"><b>Faculty</b></th>
                    <td>@Html.DisplayFor(model => model.faculty.faculty_name)</td>
                </tr>
            </tbody>
        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button class="mt-3 btn btn-danger">Delete</button>
            <button class="mt-3 btn btn-light">@Html.ActionLink("Back to List", "Index")</button>
        }

    </div>
</div>