@model _2110181055_MVC.Models.lecturer

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["university_id"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Create Lecturer</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="">
                <div class="position-relative form-group">
                    <label>Lecturer Name</label>
                    @Html.EditorFor(model => model.lecturer_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.lecturer_name, "", new { @class = "text-danger" })
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="position-relative form-group">
                            <label>Faculty</label>
                            @Html.DropDownList("faculty_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.faculty_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative form-group">
                            <label>Degree</label>
                            @Html.EditorFor(model => model.degree, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.degree, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="position-relative form-group">
                            <label>Gender</label>
                            @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button class="mt-2 btn btn-primary">Create</button>
                <button class="mt-2 btn btn-light">@Html.ActionLink("Back to List", "Index")</button>
            </form>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
